<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="1"></th>
    <% if user_signed_in? %>
      <th colspan="2"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @parts.each do |part| %>
    <tr>
      <td><%= part.name %></td>
      <td><%= link_to 'View', part_path(part) %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>